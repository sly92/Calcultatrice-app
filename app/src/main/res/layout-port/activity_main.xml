<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" tools:ignore="MissingDefaultResource">

    <TextView android:id="@+id/textView1"
              android:layout_width="fill_parent"
              android:layout_height="375dp"
              android:layout_weight="0.5"/>



    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.5"></TableLayout>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">


    </TableRow>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent" android:orientation="horizontal"
                  android:layout_weight="0.5"
    >

        <TableLayout
                android:layout_width="216dp"
                android:layout_height="match_parent">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button

                        android:id="@+id/bt_ac" android:text="@id/bt_ac" style="@style/bouton_calculatrice_chiffre_port"
                        android:layout_width="216dp"
                        android:onClick="onclick"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                            style="@style/numero"
                            android:text="@id/bt_un"
                            android:id="@+id/bt_un"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:onClick="onclick"/>

                    <Button

                            android:text="@id/bt_deux"
                            android:id="@+id/btn_2"
                            android:layout_row="0"
                            android:layout_column="1"
                            style="@style/numero"
                            android:onClick="onclick"/>

                    <Button android:onClick="onclick"

                            android:text="@id/bt_quatre"
                            android:id="@+id/bt_quatre"
                            android:layout_row="1"
                            android:layout_column="0"
                            style="@style/numero" />

                    <Button

                            android:text="@id/bt_cinq"
                            android:id="@+id/bt_cinq"
                            android:layout_column="1"
                            android:layout_row="1"
                            style="@style/numero" />
                    <Button android:onClick="onclick"

                            android:text="@id/bt_sept"
                            android:id="@+id/bt_sept"
                            android:layout_column="0"
                            android:layout_row="2"
                            style="@style/numero" />
                    <Button android:onClick="onclick"

                            android:text="@id/bt_huit"
                            android:id="@+id/bt_huit"
                            android:layout_column="1"
                            android:layout_row="2"
                            style="@style/numero" />

                </GridLayout>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button android:onClick="onclick"

                        android:id="@+id/bt_zero" android:text="@id/bt_zero" style="@style/bouton_calculatrice_chiffre_port"
                        android:layout_width="216dp" />
            </TableRow>

        </TableLayout>

        <TableLayout
                android:layout_width="108dp"
                android:layout_height="match_parent">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button android:onClick="onclick" android:id="@+id/bt_backspace"
                        android:text="@id/bt_backspace"
                        style="@style/bouton_calculatrice_chiffre_port"
                        android:layout_width="108dp"
                />
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button android:onClick="onclick"
                        style="@style/numero"
                        android:text="@id/bt_trois"
                        android:id="@+id/bt_trois" />
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >

                <Button android:onClick="onclick"

                        android:text="@id/bt_six"
                        android:id="@+id/bt_six"
                        style="@style/numero"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button android:onClick="onclick"

                        android:text="@id/bt_neuf"
                        android:id="@+id/bt_neuf"
                        style="@style/numero"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button android:onClick="onclick"

                        android:text="@id/bt_point"
                        android:id="@+id/bt_point"
                        style="@style/numero"/>
            </TableRow>

        </TableLayout>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >

                <Button android:onClick="onclick"
                        style="@style/symbole"

                        android:text="@id/bt_div"
                        android:id="@+id/bt_div" />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >

                <Button android:onClick="onclick"
                        style="@style/symbole"

                        android:text="@id/bt_fois"
                        android:id="@+id/bt_fois"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button android:onClick="onclick"
                        style="@style/symbole"

                        android:text="@id/bt_moins"
                        android:id="@+id/bt_moins" />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button android:onClick="onclick"
                        style="@style/symbole"

                        android:text="@id/bt_plus"
                        android:id="@+id/bt_plus" />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        style="@style/symbole"

                        android:text="@id/bt_egale"
                        android:id="@+id/bt_egale"
                        android:onClick="onclick"/>
            </TableRow>


        </TableLayout>


    </LinearLayout>
</LinearLayout>